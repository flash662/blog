<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to new_article_path, class: 'btn btn-primary' do %>
      <%= fa_icon('plus') %>
    <% end %>

  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>標題</th>
      <th>內文</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.content %></td>
      <td><%= link_to '編輯', edit_article_path(article), class: 'btn btn-primary' %></td>
    </tr>
    <% end %>
  </tbody>
</table>