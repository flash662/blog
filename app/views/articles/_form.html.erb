<%= form_for(@article, html: { class: 'form-horizontal' } ) do |f| %>

    <div class="form-group">
      <label class="col-sm-1 control-label">
        <%= t('activerecord.attributes.article.title') %>
      </label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-1 control-label">
        <%= t("activerecord.attributes.article.content") %>
      </label>
      <div class="col-sm-10">
        <%= f.text_area :content, class: 'form-control'  %>
      </div>
    </div>

    <%= link_to '回上一頁', articles_path, class: 'btn btn-default' %>
    <%= f.submit '送出', class: 'btn btn-primary' %>

<% end %>